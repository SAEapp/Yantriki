<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/color4"
        android:gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:text="@string/app_settings"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_sound" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sounds_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:buttonTint="@color/colorPrimaryDark"
            android:checked="true"
            android:gravity="center_vertical"
            android:switchMinWidth="40dp"
            android:text="@string/sound_effects"
            android:textColor="#95000000"
            android:textSize="20sp"
            android:thumbTint="@color/color4"
            app:thumbTint="@color/colorPrimaryDark"
            app:trackTint="@color/ic_launcher_background" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@drawable/background_gradient"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_vibration" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/vibration_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:buttonTint="@color/colorPrimaryDark"
            android:gravity="center_vertical"
            android:switchMinWidth="40dp"
            android:text="@string/vibrations"
            android:checked="true"
            android:textColor="#95000000"
            android:textSize="20sp"
            app:thumbTint="@color/colorPrimaryDark"
            app:trackTint="@color/ic_launcher_background" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@drawable/background_gradient"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_notif" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/push_notif_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:buttonTint="@color/colorPrimaryDark"
            android:gravity="center_vertical"
            android:switchMinWidth="40dp"
            android:text="@string/push_notifications"
            android:checked="true"
            android:textColor="#95000000"
            android:textSize="20sp"
            app:thumbTint="@color/colorPrimaryDark"
            app:trackTint="@color/ic_launcher_background" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/color4"
            android:gravity="center_vertical"
            android:text="@string/account"
            android:layout_marginStart="15dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_edit"
                android:layout_gravity="center_vertical"/>

            <Button
                android:id="@+id/edit_profile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:textSize="20sp"
                android:text="@string/edit_profile"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#95000000"
                 />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@drawable/background_gradient"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_delete"
                android:layout_gravity="center_vertical"/>

            <Button
                android:id="@+id/delete_account"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:textSize="20sp"
                android:text="@string/delete_account"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#95000000"
                />
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/color4"
        android:gravity="center_vertical"
        android:text="@string/others"
        android:layout_marginStart="15dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_about" />

            <Button
                android:id="@+id/about_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:text="@string/about"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#95000000"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@drawable/background_gradient"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_logout"
                android:layout_gravity="center_vertical"/>

            <Button
                android:id="@+id/logoutButton1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:text="@string/log_out"
                android:textAllCaps="false"
                android:textColor="#95000000"
                android:textSize="20sp"
                android:textAlignment="viewStart"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>